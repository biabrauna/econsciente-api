generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  age     String
  password String?
  pontos Int?
  biografia String?
  seguidores Int?
  seguindo Int?
}

model Desafios {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  desafios String
  valor Int
}

model DesafiosConcluidos {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  desafioId String
  userId String
}

model Posts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  url String
  likes Int
} 

model ProfilePic {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  name String
  url String
}

model Login{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password String
}